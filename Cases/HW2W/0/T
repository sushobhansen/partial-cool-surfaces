FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 308.15;
Tcontrol		uniform 315;
Treflective		uniform 308.6;
Tair			uniform 308.15;

boundaryField
{
    "(.*roads)"
    {
        type            fixedValue;
        value           $Tcontrol;
    }
	"(.*roofs|.*walls)"
    {
        type            fixedValue;
        value           $Tcontrol;
    }
    outer
    {
        type            fixedValue;
        value           $Tair;
    }
    south
    {
        type            zeroGradient;
	}
    west
    {
        type            fixedValue;
        value           $Tair;
    }
    east
    {
        type            zeroGradient;
    }
    north
    {
        type            zeroGradient;
    }
    atmosphere
    {
        type            symmetry;
    }
}


